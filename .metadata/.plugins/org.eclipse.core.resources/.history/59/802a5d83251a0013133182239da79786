public class LoginProtocole {

	LoginProtocole(){}
	
	
	/**
	 * @param login
	 * @param password
	 * @return sessionID
	 */
	public String login(String login, String password){
		ConnectionManager cm = new ConnectionManager();
		int NOThostNr = whichHostNotUse(login);
		boolean connectionSuccess = false;
		
		if(cm.connectToHost(++NOThostNr)){
			connectionSuccess = true;
		}
		else{
			connectionSuccess = cm.connectToHost(++NOThostNr);
		}
		if(connectionSuccess == false){
			return "UNSUCCESSFUL CONNECTION TO HOST";
		}
		return "";
	}
	
	private int whichHostNotUse(String login){
		int result = 0;
		
		return result;
	}
}


